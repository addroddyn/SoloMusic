<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="musicWPF.Playlist" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Playlist"
    MinHeight="300"
    MinWidth="300"
    Height="400"
    Width="400"
    WindowStyle="None"
    x:Name="window1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="10*" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <DockPanel>
            <ListBox
                ItemsSource="{Binding Path=SongList}"
                x:Name="listBox1">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource {x:Type ListBoxItem}}">
                        <EventSetter Event="MouseDoubleClick" Handler="ListBoxItem_MouseDoubleClick"/>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid >
                                <TextBlock 
                                    x:Name="numberColumn"
                                    Text="{Binding SongNumber}"
                                    HorizontalAlignment="Center"
                                    Margin="0, 0, 2, 0"/>
                            </Grid>
                            <Grid Grid.Column="1">
                                <TextBlock
                                    Text="{Binding SongTitle}"/>
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </DockPanel>
        <Grid
            Grid.Row="1"
            Background="Red">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <DockPanel>
                <Button
                    Content="Add file"
                    x:Name="addFileButton"
                    Click="addFileButton_Click" />
            </DockPanel>
            <DockPanel
                Grid.Column="1">
                <Button
                    Content="Add folder"
                    x:Name="addFolderButton"
                    Click="addFolderButton_Click" />
            </DockPanel>
            <DockPanel
                Grid.Column="2">
                <Button
                    Content="Clear"
                    x:Name="clearButton"
                    Click="clearButton_Click" />
            </DockPanel>
        </Grid>
    </Grid>
</Window>